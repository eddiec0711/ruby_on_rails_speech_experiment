= render 'tasks/partials/task_back_button'
= render 'tasks/partials/task_header'

- if @task.taskable.complete
  Reaction prompt: 
  = @task.specific.prompt
- else
  = form_with model: @task.specific, url: edit_click_prompt_path(:id => @task.specific.id), scope: :task, local: true do |f|
    Reaction prompt:
    %br
    = f.text_area :prompt,class: 'w-75',style: 'height: 100px'
    %br
    = f.submit "Change reaction prompt", class: "btn btn-outline-secondary"

